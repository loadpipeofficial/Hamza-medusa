{
    "compilerOptions": {
        "target": "es2019",
        "allowJs": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "typeRoots": ["./node_modules/@types"],
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "declaration": false,
        "sourceMap": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "jsx": "react-jsx",
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "checkJs": false
    },
    "include": ["src/"],
    "exclude": [
        "**/__tests__",
        "**/__fixtures__",
        "node_modules",
        "build",
        ".cache"
    ]
}
